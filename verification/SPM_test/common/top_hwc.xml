<?xml version="1.0" encoding="UTF-8"?>
    <!-- no end because the end is inside the following FW image. -->
    <!-- Hardware configuration data located inside first 124kByte of external flash  -->
<HBootImage type="REGULAR" device="SQIROM0" has_header="True" has_end="False" >
  <Header set_flasher_parameters="true" />
  <Chunks>
    <!-- reserved 4kByte space for root certificate -->
    <!-- skip over optional hboot header  64bytes -->
    <Skip absolute="0x1040" fill="0x52" />
  
    <!-- reserved 4kByte space for license certificate -->
    <!-- skip over optional hboot header  64bytes -->
    <Skip absolute="0x2040" fill="0x4C" />
  
    <!-- Hardware configuration data located after first 8kByte of internal flash  -->
    <Include name="@tBoardconfig">
        <Parameter name="HWC_TYPE_HEX">485743</Parameter> <!-- HWC -->
        <Parameter name="HWC_TYPE">HWC</Parameter>
        <Parameter name="HWC_INFO_ADDRESS">0x10002048</Parameter>
    </Include>

    <!-- Breakpoint option used for HWC debugging: Jump to a "bx lr" instruction in netX 4000 ROM at 0x041120bc -->
    <!-- increment the target address by one to change to Thumb mode -->
    <Execute>
      <Address>0x041120bd</Address>
    </Execute>

	
    <!-- fill with dummy data until end of HW data is reached -->
    <!-- check if HW data is not to big -->
    <Skip absolute="0x1EFF4" fill="0x40" />
    
    <!-- Skip over fdl and FW File Header V3 until the offset 0x00020200. -->
    <SkipIncomplete absolute="0x00020200" />

  </Chunks>
</HBootImage>